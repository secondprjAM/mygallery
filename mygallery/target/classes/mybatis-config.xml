<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration PUBLIC
"-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>		<!-- mybatis에서는 null값이 자동으로 안들어간다.==>에러    settings로 설정해 주면 null값이 자동으로 들어감 -->
		<setting name="jdbcTypeForNull" value="NULL"/>
		<setting name="cacheEnabled" value="false"/>
	</settings>

	<typeAliases>
		<typeAlias type="com.am.mygallery.member.model.vo.Member" alias="Member" />
		<typeAlias type="com.am.mygallery.notice.model.vo.Notice" alias="Notice" />
		<typeAlias type="com.am.mygallery.board.model.vo.Board" alias="Board" />
		<typeAlias type="com.am.mygallery.common.SearchDate" alias="SearchDate" />
		
	</typeAliases>
	
	<mappers>
		<mapper resource="mappers/board-mapper.xml" />
		<mapper resource="mappers/member-mapper.xml" />
		<mapper resource="mappers/notice-mapper.xml" />
	</mappers>
</configuration>
